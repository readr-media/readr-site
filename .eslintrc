{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/base"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": [
      "vue",
      "import"
  ],
  "rules": { 
    "array-bracket-spacing": [ 2, "always" ],
    "camelcase": [ 0, "" ],
    "comma-dangle": [ 2, "always" ],
    "no-console": 1,
    "yoda": [ 0, "never" ]
  },
  "globals": {
    "Coral": true,
    "FB": true,
    "FormData": true,
    "expect": true,
    "gapi": true,
    "location": true,
    "source": true
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  }
}